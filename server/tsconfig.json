{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonJS",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": true,
    "allowJs": true
  },
  "include": ["src/**/*", "generate-env.ts"],
  "ts-node": {
    "esm": true
  }
}
