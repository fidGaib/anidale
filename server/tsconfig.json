{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "es2022",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": true,
    "allowJs": true,

    "baseUrl": "src",
    "paths": {
      "@schema/*": ["schema/*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*", "generate-env.ts", "codegen.ts"],
  "ts-node": {
    "esm": true,
    "swc": true
  }
}
