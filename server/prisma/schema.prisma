// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DB_LINK")
}

generator client {
  provider = "prisma-client-js"
}
 

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  pass        String
  login       String
  avatar      String
  activationLink String?
  isActivated Boolean
  createdAt   DateTime @default(now())
  notices     Notice[]
  tokens      Token[]
  chats       Chat[]
  messages    Message[]
}

model Notice {
  id          Int      @id @default(autoincrement())
  description String
  date        DateTime @default(now())
  images      NoticeImage[]
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

model NoticeImage {
  id          Int      @id @default(autoincrement())
  minimize    String
  oversize    String
  vertical    Boolean
  date        DateTime @default(now())
  notice      Notice   @relation(fields: [noticeId], references: [id])
  noticeId    Int
}

model Token {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  refreshToken String
}

model Chat {
  id          Int      @id @default(autoincrement())
  users       User[]
  messages    Message[] 
}

model Message {
  id          Int      @id @default(autoincrement())
  chat        Chat     @relation(fields: [chatId], references: [id])
  chatId      Int
  sender      User     @relation(fields: [senderId], references: [id])
  senderId    Int
  text        String
  sentAt      DateTime @default(now())
}
